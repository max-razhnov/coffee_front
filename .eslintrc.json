{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "airbnb",
    "plugin:jest/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "jest", "import"],
  "rules": {
    "quotes": [2, "double"],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "no-console": 0,
    "no-use-before-define": [2, { "functions": false, "classes": true }],
    "no-param-reassign": 0,
    "semi": [2, "always"],
    "import/no-unresolved": 0,
    "no-plusplus": 0,
    "no-unused-vars": 0
  }
}
